<div class="container">
    <div class="main-container">
        <img id="cover-pic" src="./img/cover.jpg" alt="">
        <div class="form-container">
            <header>
                <h2>Log in</h2>
            </header>
            <form class="form" id="form-login">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="username" id="username" placeholder="eg. alex978" type="text" required/>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle">
                        <div class="errorInfo">Username must not begin with a digit and contain 
                            at least 6 characters including alphabet letters, numbers or _ (underscore)
                        </div>
                    </i>
                    <small>Error message</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="password" id="password" placeholder="Password" type="password" required/>
                    <i class="fas bx-error-circle error-icon"></i>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
                </div>

                <input id="sumbmitBtn" type="submit" value="Login" />
                <footer>
                    <div>or <a href="#"> Forgot password</a></div>
                    <div>Don't have an account? <a href="/user/signup"> Sign up</a></div>
                </footer>


            </form>


        </div>
    </div>
</div>
